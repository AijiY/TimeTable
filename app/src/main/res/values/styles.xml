<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="CustomTabStyle" parent="Widget.Design.TabLayout">
    <!-- タブのテキストサイズ -->
    <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>

    <!-- タブの背景色 -->
    <item name="tabBackground">@color/white</item>

    <!-- タブのテキストカラー -->
    <item name="tabTextColor">@color/button</item>

    <!-- タブの下線のカラー（インジケーターの色） -->
    <item name="tabIndicatorColor">@color/button</item>

    <!-- タブの下線（インジケーター）の太さ -->
    <item name="tabIndicatorHeight">3dp</item>
  </style>

  <!-- タブのテキストの外観 -->
  <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">16sp</item>
    <!-- 他の属性も追加可能 -->
  </style>

  <style name="TimeTextViewStyle" parent="Widget.AppCompat.TextView">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="StationTextViewStyle" parent="Widget.AppCompat.TextView">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">2</item>
    <item name="android:gravity">start</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@color/black</item>
  </style>

  <style name="TrainLineTextViewStyle" parent="Widget.AppCompat.TextView">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:gravity">start</item>
  </style>

  <style name="WalkTextViewStyle" parent="Widget.AppCompat.TextView">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:gravity">start</item>
  </style>
</resources>